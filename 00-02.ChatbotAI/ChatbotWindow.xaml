<Window x:Class="_00_02.ChatbotAI.ChatbotWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_00_02.ChatbotAI"
             mc:Ignorable="d" 
             Title="Chatbot Revit AI" Height="400" Width="600">
    <Grid>
        <TextBox Name="UserInput" Height="40" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Gửi" Click="SendPrompt" Width="80" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"/>
        <TextBox Name="ChatOutput" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Margin="10,10,10,50"/>
    </Grid>
</Window>
